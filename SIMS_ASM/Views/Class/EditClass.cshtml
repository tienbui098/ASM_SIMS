@model SIMS_ASM.Models.Class

@{
    ViewData["Title"] = "Edit Class";
    Layout = "~/Views/Shared/_Layout1.cshtml"; // Giả định sử dụng layout giống các trang trước
}

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="m-0 font-weight-bold">
                    <i class="fas fa-chalkboard me-2"></i>Edit Class
                </h5>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to Class Management
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="EditClass" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="ClassID" />

            <div class="form-group mb-3">
                <label asp-for="ClassName" class="control-label fw-bold"></label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MajorID" class="control-label fw-bold">Major</label>
                <select asp-for="MajorID" class="form-select" asp-items="@(new SelectList(ViewBag.Majors, "MajorID", "MajorName"))">
                    <option value="">Select a Major</option>
                </select>
                <span asp-validation-for="MajorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/EditClass.css" rel="stylesheet" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/EditClass.js"></script>
}