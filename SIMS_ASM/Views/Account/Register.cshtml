@model SIMS_ASM.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true">
    <title>Register</title>
</head>
<body>
    <div class="full-width-container">
        <div class="register-container">
            <div class="register-image">
                <div class="register-image-content">
                    <h2>Join Us</h2>
                    <p>Create an account to manage your profile</p>
                </div>
            </div>
            <div class="register-form"> 
                <div class="register-header">
                    <h1>Sign Up</h1>
                    <p>Fill in the details to create your account</p>
                </div>
                <form asp-controller="Account" asp-action="Register" method="post">
                    <div class="input-group">
                        <label asp-for="Username"></label>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input asp-for="Username" placeholder="Enter your username" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <label asp-for="Password"></label>
                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            <input asp-for="Password" type="password" placeholder="Enter your password" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <label asp-for="Role"></label>
                        <div class="input-field">
                            <i class="fas fa-user-tag"></i>
                            <select asp-for="Role" required>
                                <option value="Student">Student</option>
                            </select>
                        </div>
                    </div>
                    <div class="input-group">
                        <label asp-for="Email"></label>
                        <div class="input-field">
                            <i class="fas fa-envelope"></i>
                            <input asp-for="Email" placeholder="Enter your email" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <label asp-for="FullName"></label>
                        <div class="input-field">
                            <i class="fas fa-user-circle"></i>
                            <input asp-for="FullName" placeholder="Enter your full name" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <label asp-for="Date_of_birth"></label>
                        <div class="input-field">
                            <i class="fas fa-calendar"></i>
                            <input asp-for="Date_of_birth" type="date" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <label asp-for="Address"></label>
                        <div class="input-field">
                            <i class="fas fa-map-marker-alt"></i>
                            <input asp-for="Address" placeholder="Enter your address" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <label asp-for="Phone_number"></label>
                        <div class="input-field">
                            <i class="fas fa-phone"></i>
                            <input asp-for="Phone_number" placeholder="Enter your phone number" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <label asp-for="Gender"></label>
                        <div class="input-field">
                            <i class="fas fa-venus-mars"></i>
                            <select asp-for="Gender" required>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="register-button">Sign Up</button>
                    <div class="login-link">
                        <p>Already have an account? <a asp-action="Login">Sign in</a></p>
                    </div>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="validation-summary-errors"></div>
                    }
                </form>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var validationSummary = document.querySelector('.validation-summary-errors');
        if (validationSummary) {
            var errorList = validationSummary.querySelector('ul');
            if (!errorList || errorList.children.length === 0) {
                validationSummary.style.display = 'none';
            }
        }
    });
</script>

