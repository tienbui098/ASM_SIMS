@model SIMS_ASM.Models.Grade

@{
    ViewData["Title"] = "Edit Grade";
    Layout = "~/Views/Shared/_Layout1.cshtml"; // Giả định sử dụng layout giống các trang trước
}

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="m-0 font-weight-bold">
                    <i class="fas fa-star me-2"></i>Edit Grade
                </h5>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to Grade Management
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="EditGrade" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="GradeID" />

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Class</label>
                <select id="ClassID" class="form-select" asp-items="ViewBag.Classes">
                    <option value="">-- Select Class --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EnrollmentID" class="control-label fw-bold"></label>
                <select asp-for="EnrollmentID" class="form-select" asp-items="ViewBag.Enrollments">
                    <option value="">-- Select Enrollment --</option>
                </select>
                <span asp-validation-for="EnrollmentID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Score" class="control-label fw-bold"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/EditGrade.css" rel="stylesheet" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/EditGrade.js"></script>
}