@model List<SIMS_ASM.Models.Grade>

@{
    ViewData["Title"] = "Grade Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userRole = Context.Session.GetString("Role");
}

<h2>Grade Management</h2>

<p>
    <a asp-action="CreateGrade" class="btn btn-primary">Add New Grade</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Student</th>
            <th>Course</th>
            <th>Grade</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model)
        {
            <tr>
                <td>@grade.User?.Username</td>
                <td>@grade.Course?.CourseName</td>
                <td>@grade.GradeValue</td>
                <td>
                    <a asp-action="EditGrade" asp-route-id="@grade.GradeID" class="btn btn-sm btn-primary">Edit</a>
                    @if (userRole == "Administrator")
                    {
                        <form asp-action="Deletegrade" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@grade.GradeID" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this grade?')">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (userRole == "Administrator")
{
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
}
else
{
    <a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
}