@model SIMS_ASM.Models.User
@using SIMS_ASM.Services
@inject IUserService UserService

@{
    ViewData["Title"] = "Bảng Điều Khiển Sinh Viên";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="m-0 font-weight-bold">
                    <i class="fas fa-tachometer-alt me-2"></i>Bảng Điều Khiển Sinh Viên
                </h5>
            </div>
            <div class="col-md-6 text-end">
                <div class="btn-group">
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Đăng Xuất</button>
                    </form>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-cog me-1"></i>Tài Khoản
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="ChangePassword" asp-action="Index"><i class="fas fa-key me-2"></i>Đổi Mật Khẩu</a></li>
                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="fas fa-user-circle me-2"></i>Xem Hồ Sơ</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-header bg-secondary text-white py-2">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-user me-2"></i>Thông Tin Của Tôi
                        </h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover" id="studentInfoTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>User ID</th>
                                    <th>User Name</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Date Of Birth</th>
                                    <th>Address</th>
                                    <th>Phone Number</th>
                                    <th>Gender</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.UserID</td>
                                    <td>@Model.Username</td>
                                    <td>@Model.FullName</td>
                                    <td>@Model.Email</td>
                                    <td>@Model.Date_of_birth.ToShortDateString()</td>
                                    <td>@Model.Address</td>
                                    <td>@Model.Phone_number</td>
                                    <td>@Model.Gender</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        .card-header {
            padding: 1rem 1.5rem;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            // Khởi tạo DataTable (nếu cần thiết)
            $('#studentInfoTable').DataTable({
                paging: false, // Tắt phân trang
                searching: false // Tắt tìm kiếm
            });
         });
    </script>
}