@model SIMS_ASM.Models.StudentClass

@{
    ViewData["Title"] = "Assign Student to Class";
}

<h2>Assign Student to Class</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="CreateStudentClass" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UserID" class="control-label">Student</label>
        <select asp-for="UserID" class="form-control" asp-items="@(new SelectList(ViewBag.Students, "UserID", "FullName"))">
            <option value="">Select a Student</option>
        </select>
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClassID" class="control-label">Class</label>
        <select asp-for="ClassID" class="form-control" asp-items="@(new SelectList(ViewBag.Classes, "ClassID", "ClassName"))">
            <option value="">Select a Class</option>
        </select>
        <span asp-validation-for="ClassID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Assign" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}