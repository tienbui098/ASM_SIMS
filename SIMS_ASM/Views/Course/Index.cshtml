@model List<SIMS_ASM.Models.Course>

@{
    ViewData["Title"] = "Course Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Course Management</h2>

<p>
    <a asp-action="CourseCreate" method="post" class="btn btn-primary">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            @* <th>Instructor</th> *@
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.CourseStartDate?.ToString("dd/MM/yyyy")</td>
                <td>@course.CourseEndDate?.ToString("dd/MM/yyyy")</td>
                <td>@course.User?.Username</td>
                <td>
                    <a asp-action="EditCourse" asp-route-id="@course.CourseID" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@course.CourseID" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this course?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>