@model IEnumerable<SIMS_ASM.Models.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h3>All Students</h3>
<a asp-action="AddStudent" class="btn btn-primary">Add User</a>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>FullName</th>
            <th>Email</th>
            <th>Date_of_birth</th>
            <th>Address</th>
            <th>Phone_number</th>
            <th>Gender</th>
			<th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Where(u => u.Role == "Student"))
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Date_of_birth</td>
                <td>@user.Address</td>
                <td>@user.Phone_number</td>
                <td>@user.Gender</td>
                <td>
                    @Html.ActionLink("Edit", "UpdateStudent", new { id = user.UserID }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = user.UserID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this student?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back</a>