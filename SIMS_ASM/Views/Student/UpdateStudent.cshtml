@{
}
<div class="container">
    <h2>Edit User Profile</h2>
    <form asp-action="UpdateStudent" method="post">
        <input type="hidden" asp-for="UserID" />
        <input type="hidden" asp-for="Username" />
        <input type="hidden" asp-for="Role" />
        <input type="hidden" asp-for="Password" />

        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label>Current Role</label>
            <input value="@Model.Role" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date_of_birth"></label>
            <input asp-for="Date_of_birth" type="date" class="form-control" required />
            <span asp-validation-for="Date_of_birth" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" required />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone_number"></label>
            <input asp-for="Phone_number" class="form-control" required />
            <span asp-validation-for="Phone_number" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control" required>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
            <a asp-action="ManagerStudent" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}