@model IEnumerable<SIMS_ASM.Models.ClassCourseFaculty>

@{
    ViewData["Title"] = "ClassCourseFaculty Management";
}

<h2>ClassCourseFaculty Management</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}


<a asp-action="CreateClassCourseFaculty" class="btn btn-primary">Create New ClassCourseFaculty</a>


<!-- Filters -->
<form method="get" asp-action="Index">
    <div class="row">
        <div class="col-md-4">
            <label for="classFilter">Filter by Class:</label>
            <select id="classFilter" name="classId" class="form-control" onchange="this.form.submit()">
                <option value="">-- All Classes --</option>
                @foreach (var cls in ViewBag.Classes)
                {
                    <option value="@cls.ClassID" selected="@(cls.ClassID.ToString() == ViewBag.SelectedClass ? "selected" : null)">@cls.ClassName</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <label for="courseFilter">Filter by Course:</label>
            <select id="courseFilter" name="courseId" class="form-control" onchange="this.form.submit()">
                <option value="">-- All Courses --</option>
                @foreach (var course in ViewBag.Courses)
                {
                    <option value="@course.CourseID" selected="@(course.CourseID.ToString() == ViewBag.SelectedCourse ? "selected" : null)">@course.CourseName</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <label for="facultyFilter">Filter by Lecturer:</label>
            <select id="facultyFilter" name="facultyId" class="form-control" onchange="this.form.submit()">
                <option value="">-- All Faculties --</option>
                @foreach (var faculty in ViewBag.Faculties)
                {
                    <option value="@faculty.UserID" selected="@(faculty.UserID.ToString() == ViewBag.SelectedFaculty ? "selected" : null)">@faculty.FullName</option>
                }
            </select>
        </div>
    </div>
</form>

<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ClassCourseFaculty ID</th>
            <th>Class</th>
            <th>Course</th>
            <th>Lecturers</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ccf in Model)
        {
            <tr>
                <td>@ccf.ClassCourseFacultyID</td>
                <td>@ccf.Class?.ClassName</td>
                <td>@ccf.Course?.CourseName</td>
                <td>@ccf.User?.FullName</td>
                <td>
                    <a asp-action="EditClassCourseFaculty" asp-route-id="@ccf.ClassCourseFacultyID" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteClassCourseFaculty" asp-route-id="@ccf.ClassCourseFacultyID" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this ClassCourseFaculty?');">
                        <input type="hidden" name="id" value="@ccf.ClassCourseFacultyID" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

